        </div>

        <!-- Copyright -->
        <p class="text-lg font-semibold border-t border-yellow-500 pt-6">
          2025 KukiPets. Todos los derechos reservados.
        </p>
      </div>
    </footer>

    <script>
      // Mensajes aleatorios
      const messages = [
        "¡Gracias por visitarnos!",
        "¡Tus mascotas son nuestra pasión!",
        "Premium para tus peludos",
        "Jesús Almanza - My Point.click",
        "¡Bienvenido a KukiPets!",
        "¡Woof woof! ¡Gracias!",
        "Los consentimos como en casa",
        "Donde las mascotas son familia",
      ];

      // Rotador de mensajes
      document.addEventListener("DOMContentLoaded", () => {
        const messageElement = document.getElementById("randomMessage");
        let currentIndex = 0;

        if (messageElement) {
          // Mostrar primer mensaje
          messageElement.textContent = messages[currentIndex];
          // Rotar cada 3 segundos
          setInterval(() => {
            currentIndex = (currentIndex + 1) % messages.length;
            messageElement.textContent = messages[currentIndex];
          }, 3000);
        }

        // Sync contador de carrito desde localStorage
        const headerCount = document.getElementById("headerCartCount");
        const floatingCount = document.getElementById("floatingCartCount");

        const readCart = () => {
          try {
            return JSON.parse(localStorage.getItem("kukipets_cart") || "[]");
          } catch {
            return [];
          }
        };
        const updateHeader = () => {
          const cart = readCart();
          const count = cart.reduce((s, it) => s + (it.qty || 1), 0);
          if (headerCount) headerCount.textContent = String(count);
          if (floatingCount) floatingCount.textContent = String(count);
        };

        updateHeader();
        window.addEventListener("storage", (e) => {
          if (e.key === "kukipets_cart") updateHeader();
        });
        // Soporte para actualización manual desde otras vistas
        window.addEventListener("kukipets:cart-updated", updateHeader);
      });
    </script>

    <style>
      .social-icon {
        @apply w-14 h-14 rounded-full flex items-center justify-center shadow-md;
        @apply transition-all duration-300 transform hover:scale-110;
        @apply border-2 border-transparent hover:border-white;
      }
      @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
      }
      .animate-bounce {
        animation: bounce 1s infinite;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: scale(0.95);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
      .animate-fadeIn {
        animation: fadeIn 0.3s ease-out;
      }
    </style>
    <!-- ESTILOS (conserva tus fuentes) -->
    <style is:global>
      body {
        font-family: "Lato", sans-serif;
      }
      h1,
      h2,
      h3 {
        font-family: "Fredoka", sans-serif;
        font-weight: 600;
      }

      .social-icon {
        @apply w-12 h-12 rounded-full flex items-center justify-center shadow-md;
        @apply transition-all duration-300 transform hover:scale-110;
        @apply border-2 border-transparent hover:border-white;
      }
    </style>
  </body>
</html>
