---
const links = [
    { text: 'Inicio', url: '/' },
    { text: 'Productos', url: '/servicios' },
    { text: 'Contacto', url: '/contactos' }
];
---
<nav class="hidden md:flex space-x-8">
    {links.map(link => (
        <a 
            href={link.url} 
            class="hover:text-black font-medium transition-colors"
            class:list={[
                "py-2",
                "px-1",
                "relative",
                "after:content-['']",
                "after:absolute",
                "after:bottom-0",
                "after:left-0",
                "after:w-0",
                "after:h-0.5",
                "after:bg-black",
                "after:transition-all",
                "hover:after:w-full"
            ]}
        >
            {link.text}
        </a>
    ))}
</nav>